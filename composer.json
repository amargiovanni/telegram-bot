{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "bezhansalleh/filament-shield": "^3.2",
        "dedoc/scramble": "^0.12.36",
        "defstudio/telegraph": "^1.64",
        "dev-to-geek/laravel-init": "^0.1.6",
        "driftingly/rector-laravel": "^2.1",
        "filament/filament": "^3.2",
        "filament/spatie-laravel-media-library-plugin": "^3.2",
        "filament/spatie-laravel-settings-plugin": "^3.2",
        "laravel/framework": "^12.38",
        "laravel/pail": "^1.2",
        "laravel/prompts": "^0.3.7",
        "laravel/pulse": "^1.4",
        "laravel/sanctum": "^4.2",
        "laravel/telescope": "^5.15",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.6",
        "livewire/volt": "^1.9",
        "oltrematica/laravel-ratelimiter": "^1.0",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-medialibrary": "^11.17",
        "spatie/laravel-permission": "^6.23",
        "willvincent/feeds": "^2.7"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.8",
        "laravel/boost": "^1.8",
        "laravel/pint": "^1.25",
        "laravel/sail": "^1.48",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-browser": "^4.1",
        "pestphp/pest-plugin-faker": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "test:coverage": [
            "@php artisan config:clear --ansi",
            "@php artisan test --coverage"
        ],
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "format": "vendor/bin/pint",
        "refactor": "vendor/bin/rector"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
